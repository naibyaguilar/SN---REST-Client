<!DOCTYPE html>
<html lang="en">

<%- include('../../views/templates/head')-%>

    <body>
        <section class="bg-light py-5" style="background-image: url('assets/image/pattern-shapes.png');">
            <div class="container px-5">
                <div class="row gx-5 mb-3">
                    <div class="col-md-6 text-center">
                        <div class="col-lg-5 ">
                            <img src="../../assets/image/login.svg" alt="">
                        </div>
                    </div>
                    <div class="col-md-6 ">
                        <div class="card post-preview post-preview-featured lift mb-5 overflow-hidden ">
                            <h5 class="card-header card-title text-center">Iniciar Sesión</h5>
                            <div class="card-body">
                                <form method="POST" action="/login" class="needs-validation" novalidate>
                                    <div class="form-group row mb-5">
                                        <input class="form-control py-4" id="inputEmail" type="email"
                                            placeholder="Correo electronico" name="email" required>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <input class="form-control py-4" id="inputPassWord" type="password"
                                            placeholder="Contraseña" minlength="8" name="password" required>
                                    </div>
                                    <% if(message != undefined){ %>
                                        <p href="#"><%= message %></p>
                                    <% } %>
                                    <div class="form-group row ">
                                        <div class="form-check col-md-6">
                                            <input class="form-check-input" type="checkbox" value=""
                                                id="flexCheckIndeterminate">
                                            <label class="form-check-label" for="flexCheckIndeterminate">
                                                Recordar cuenta
                                            </label>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <p>¿Aun no tienes cuenta? <a class="text-red" href="/register">
                                                    ¡Registrate!</a>
                                            </p>
                                        </div>
                                        <div class="text-center">
                                            <button class="btn btn-primary mt-3" type="submit">Iniciar Sesión</button>
                                            <div class="small mt-3"><a class="text-red" href="/recover">¿Olvidaste tu
                                                    contraseña?</a></div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>

    <%- include('../../views/templates/need-validation')-%>

</html>
